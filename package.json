{
    "name": "sainsorscience-bot",
    "version": "0.9.0",
    "description": "A bot whom provides science quizzes from Malaysia's governmental secondary schools with both Malay (Bahasa Melayu) and English support.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "clean": "rm -rf dist",
        "start": "npm run clean && npm run build && npx tsc -w & npx nodemon build | npx pino-pretty -i pid,hostname -t 'yyyy-mm-dd HH:MM:ss'",
        "startNoClean": "npm run build && npx tsc -w & npx nodemon build | npx pino-pretty -i pid,hostname -t 'yyyy-mm-dd HH:MM:ss'",
        "build": "npx tsc --build",
        "release": "npx standard-version"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/haydenykh/SainsOrScienceBot.git"
    },
    "keywords": [
        "discord",
        "sains",
        "science",
        "bot"
    ],
    "author": "HaydenYKH",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/haydenykh/SainsOrScienceBot/issues"
    },
    "homepage": "https://github.com/haydenykh/SainsOrScienceBot#readme",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/node": "^22.5.2",
        "eslint": "^9.9.1",
        "globals": "^15.9.0",
        "standard-version": "^9.5.0",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.3.0"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "discord.js": "^14.15.3",
        "dotenv": "^16.4.5",
        "glob": "^11.0.0",
        "pino": "^7.0.0-rc.9",
        "pino-pretty": "^11.2.2"
    }
}
